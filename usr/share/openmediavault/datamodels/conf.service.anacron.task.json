{
	"type": "config",
	"id": "conf.service.anacron.task",
	"title": "Anacron task",
	"queryinfo": {
		"xpath": "//services/anacron/task",
		"iterable": true,
		"idproperty": "uuid"
	},
	"properties": {
		"uuid": {
			"type": "string",
			"format": "uuidv4"
		},
		"enable": {
			"type": "boolean",
			"default": 0
		},
		"sendemail": {
			"type": "boolean",
			"default": 0
		},
		"period": {
			"type": "string"
		},
		"delay": {
			"type": "integer",
			"minimum": 0,
			"maximum": 1440,
			"default": 0
		},
		"identifier": {
			"type": "string"
		},
		"username": {
			"type": "string"
		},
		"command": {
			"type": "string"
		},
		"comment": {
			"type": "string"
		}
	}
}
